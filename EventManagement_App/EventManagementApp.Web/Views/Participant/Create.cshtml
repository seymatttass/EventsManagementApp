@using System.Web.Mvc
@using System.Web.Mvc.Html
@inherits System.Web.Mvc.WebViewPage<EventManagementApp.Data.Entities.Participant>

@{
    ViewBag.Title = "Yeni Katılımcı";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4><i class="fas fa-user-plus"></i> Yeni Katılımcı Oluştur</h4>
                    <p class="mb-0">Yeni bir katılımcı ekleyebilirsiniz.</p>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Hata!</strong> @TempData["ErrorMessage"]
                        </div>
                    }

                    @using (Html.BeginForm("Create", "Participant", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.FirstName, "Ad", new { @class = "form-label" })
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.FirstName, new
                            {
                                @class = "form-control",
                                placeholder = "Katılımcının adını giriniz",
                                required = "required",
                                maxlength = "50"
                            })
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">En az 2, maksimum 50 karakter</small>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.LastName, "Soyad", new { @class = "form-label" })
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.LastName, new
                            {
                                @class = "form-control",
                                placeholder = "Katılımcının soyadını giriniz",
                                required = "required",
                                maxlength = "50"
                            })
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">En az 2, maksimum 50 karakter</small>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, "E-posta", new { @class = "form-label" })
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.Email, new
                            {
                                @class = "form-control",
                                placeholder = "ornek@email.com",
                                required = "required",
                                type = "email",
                                maxlength = "100"
                            })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Geçerli bir e-posta adresi giriniz</small>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone, "Telefon", new { @class = "form-label" })
                            <span class="text-danger">*</span>
                            @Html.TextBoxFor(m => m.Phone, new
                            {
                                @class = "form-control",
                                placeholder = "0555 123 45 67",
                                required = "required",
                                maxlength = "20"
                            })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                            <small class="form-text text-muted">Telefon numaranızı giriniz</small>
                        </div>

                        <div class="alert alert-info">
                            <strong><i class="fas fa-info-circle"></i> Bilgi:</strong>
                            <div class="mt-2">
                                <ul class="list-unstyled mb-0">
                                    <li>• Katılımcı kaydı oluşturulduktan sonra etkinliklere eklenebilir</li>
                                    <li>• E-posta adresi benzersiz olmalıdır</li>
                                    <li>• Tüm iletişim bilgileri doğru olduğundan emin olun</li>
                                    <li>• Katılımcı bilgileri daha sonra düzenlenebilir</li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>

                        <div class="mt-3">
                            <small class="text-muted">
                                <span class="text-danger">*</span> işaretli alanlar zorunludur.
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

